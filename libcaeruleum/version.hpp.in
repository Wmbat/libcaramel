#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBCAERULEUM_VERSION       $libcaeruleum.version.project_number$ULL
#define LIBCAERULEUM_VERSION_STR   "$libcaeruleum.version.project$"
#define LIBCAERULEUM_VERSION_ID    "$libcaeruleum.version.project_id$"
#define LIBCAERULEUM_VERSION_FULL  "$libcaeruleum.version$"

#define LIBCAERULEUM_VERSION_MAJOR $libcaeruleum.version.major$
#define LIBCAERULEUM_VERSION_MINOR $libcaeruleum.version.minor$
#define LIBCAERULEUM_VERSION_PATCH $libcaeruleum.version.patch$

#define LIBCAERULEUM_PRE_RELEASE   $libcaeruleum.version.pre_release$

#define LIBCAERULEUM_SNAPSHOT_SN   $libcaeruleum.version.snapshot_sn$ULL
#define LIBCAERULEUM_SNAPSHOT_ID   "$libcaeruleum.version.snapshot_id$"
